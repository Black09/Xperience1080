<window>
    <defaultcontrol>11</defaultcontrol>
    <controls>
        <control type="group">
            <animation type="WindowOpen" condition="Window.IsVisible(seekbar) | Window.IsVisible(videoosd) | Window.IsVisible(osdvideosettings) | Window.IsVisible(osdaudiosettings)" reversible="false">
                <effect type="fade" start="0" end="100" time="0" delay="300" />
            </animation>
            <control type="group">
                <posx>365</posx>
                <posy>740</posy>
                <include>NowPlayingFullscreen</include>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1190</width>
                    <height>194</height>
                    <texture>osd/fullscreen/osd-back-slider.png</texture>
                    <aspectratio>stretch</aspectratio>
                    <colordiffuse>FFFFFFFF</colordiffuse>
                </control>
                <control type="label" id="10">
                    <description>Option Name</description>
                    <posx>85</posx>
                    <posy>76</posy>
                    <width>330</width>
                    <height>40</height>
                    <label>-</label>
                    <align>left</align>
                    <font>Font-Condensed-S37</font>
                    <textcolor>aawhite</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label" id="12">
                    <description>Slider Value</description>
                    <posx>775</posx>
                    <posy>76</posy>
                    <label>-</label>
                    <width>330</width>
                    <height>40</height>
                    <align>right</align>
                    <font>Font-Condensed-S37</font>
                    <textcolor>aawhite</textcolor>
                    <scroll>false</scroll>
                </control>          
                <control type="slider" id="11">
                    <description>Slider</description>
                    <posx>805</posx>
                    <posy>81</posy>
                    <width>300</width>
                    <height>30</height>
                    <sliderwidth>300</sliderwidth>
                    <sliderheight>30</sliderheight>
                    <texturesliderbar border="22,1,22,1">buttons/OSD/slider_back.png</texturesliderbar>
                    <textureslidernib>buttons/OSD/orb_nofo.png</textureslidernib>
                    <textureslidernibfocus>buttons/OSD/orb_fo.png</textureslidernibfocus>
                    <onup>11</onup>
                    <ondown>11</ondown>
                    <onleft>11</onleft>
                    <onright>11</onright>
                </control>
            </control>
        </control>
    </controls>
</window>
